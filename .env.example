# VS Code Education Platform - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=development

# ============================================================================
# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your Apps
# https://console.firebase.google.com/
# ============================================================================

# Firebase Web App Configuration (client-side - use VITE_ prefix)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Admin SDK (server-side - for backend services)
# Get from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Firebase Project IDs for different environments
FIREBASE_PROJECT_ID_STAGING=your_project_staging
FIREBASE_PROJECT_ID_PROD=your_project_production

# ============================================================================
# Universal Compiler API
# For sandboxed code execution
# ============================================================================
COMPILER_API_URL=http://localhost:3000/api/v1
COMPILER_API_KEY=your_compiler_api_key_change_in_production

# Alternative: Use public API during development
# COMPILER_API_URL=https://emkc.org/api/v2/piston

# ============================================================================
# AI Provider Configuration
# Choose one provider: openai or anthropic
# ============================================================================

# Active AI Provider
AI_PROVIDER=openai

# OpenAI Configuration
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000

# Anthropic Claude Configuration (alternative)
# Get API key from https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229
# ANTHROPIC_MAX_TOKENS=4000

# ============================================================================
# Rate Limiting & Security
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_random_session_secret_at_least_32_characters_long
SESSION_DURATION=86400000

# ============================================================================
# Logging & Monitoring
# ============================================================================
LOG_LEVEL=info

# Sentry Error Tracking (optional)
# Get DSN from https://sentry.io/
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project-id

# ============================================================================
# Google Cloud Configuration (for Compiler API deployment)
# ============================================================================
# GCP_PROJECT_ID=your_gcp_project_id
# GCP_REGION=us-central1

# ============================================================================
# Testing
# ============================================================================
# BASE_URL=http://localhost:8080
# TEST_USER_EMAIL=test@example.com
# TEST_USER_PASSWORD=testpassword123
